<!DOCTYPE html>
<html lang="{{ app.request.getLocale() }}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="author" content="Baks Development">

    <title>{% block title %}{{ baks_settings.headers.title }}{% endblock %}</title>

    <link rel="icon" href="/assets/img/favicon/favicon.ico">

    <link href="/assets/css/bootstrap.5.3.2.min.css" rel="stylesheet">
    <link href="/assets/css/style.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}

</head>

<body>


{% block header %}
    {{ include(_self|replace({ "base.html.twig": baks_settings.device~"/header.html.twig" })) }}
{% endblock %}

{% block content %}{% endblock %}

<script nonce="{{ csp_nonce() }}">
    const $locale = '{{ app.request.getLocale() }}';
    window.lazyLoadOptions = {};
    window.bootstrap = false;
</script>

<script async nonce="{{ csp_nonce() }}" src='/assets/js/lazyload.min.js?v={{ version }}'></script>

{# Проверить актуальную версию https://cdn.jsdelivr.net/npm/bootstrap #}

<script async data-src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'
        class="lazy" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>

{# <script async data-src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script> #}

<script nonce="{{ csp_nonce() }}" async data-src='/assets/js/script.js?v={{ version }}' class="lazy"></script>

{% block javascript %}{% endblock %}

{% block footer %}{% endblock %}

{# TOAST УВЕДОМЛЕНИЯ ****************************************************** #}
{% include Template('/_includes/'~baks_settings.device~'/flash.html.twig') %}
{# END УВЕДОМЛЕНИЯ ****************************************************** #}

{# Блок модального окна #}
<div class="modal fade" tabindex="-1" id="modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="d-flex justify-content-center w-100">
            <div class="spinner-border text-light" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

{# UO / DOWN #}
<div id="btn-back-to-top" style="display: none;" class="d-print-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor"
         class="shadow shadow icon rounded-3 p-2"
         viewBox="0 0 16 16">
        <path fill-rule="evenodd"
              d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708l6-6z"/>
    </svg>
</div>

<div id="btn-back-to-end" style="display: none;" class="d-print-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor"
         class="shadow shadow icon rounded-3 p-2"
         viewBox="0 0 16 16">
        <path fill-rule="evenodd"
              d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
    </svg>
</div>

</body>

{# Блок печати #}
<div id="prnt" class="d-none d-print-block"></div>


</html>
